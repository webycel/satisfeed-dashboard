<li class="row">
  <div class="info small-2 columns">
    <img src="<%= image_url(experience.description + '.svg') %>" width="100%" alt="<%= experience.description %> experience" />
    <%= experience.created_at.to_date %>
    <%= experience.created_at.split[4] %>
  </div>
  <div class="reason small-10 columns">
    <% if experience.extra_info %>
      <p><%= experience.extra_info %></p>
    <% end %>
    <% unless experience.reasons.nil? %>
      <br>
      <b>Reasons:</b>
      <ul>
        <% experience.reasons.each do |reason| %>
          <li><%= reason.description %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
</li>